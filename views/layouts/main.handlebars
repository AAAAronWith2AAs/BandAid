<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BandAID</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <section class="hero">
      <div class="hero-body">
        <h1 class="title is-1">BandAID</h1>
        <h2 class="subtitle">
          Accessible, Informative, DIY organizational tool to store data about
          concerts your band or musical group has played!
        </h2>
      </div>

      <nav
        class="navbar is-warning"
        role="navigation"
        aria-label="main navigation"
      >
        <div class="navbar-brand">
          <a class="navbar-item" href="https://bulma.io">
            <img
              src="https://bulma.io/images/bulma-logo.png"
              width="112"
              height="28"
            />
          </a>

          <a
            role="button"
            class="navbar-burger"
            aria-label="menu"
            aria-expanded="false"
            data-target="navbarBasicExample"
          >
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item">
              Home
            </a>

            <a class="navbar-item">
              Documentation
            </a>

            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                More
              </a>

              <div class="navbar-dropdown">
                <a class="navbar-item">
                  About
                </a>
                <a class="navbar-item">
                  Jobs
                </a>
                <a class="navbar-item">
                  Contact
                </a>
                <hr class="navbar-divider" />
                <a class="navbar-item">
                  Report an issue
                </a>
                <a
                  id="concerts"
                  class="navbar-item"
                  href="https://fierce-beach-33317.herokuapp.com/api/concerts/"
                > Concerts </a>
                <a
                  id="nav-venue"
                  class="navbar-item"
                  href="https://fierce-beach-33317.herokuapp.com/api/venues"
                > Venue </a>
              </div>
            </div>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">

              <div class="field is-grouped">
                <div class="field has-addons has-addons-right">
                  <form id="nav-search">
                    <p class="control">
                      <span class="select">
                        <select id="nav-select">
                          <option>Concert by Band</option>
                          <option>Venue by Name</option>
                          <option>Band by Name</option>
                        </select>
                      </span>
                    </p>
                    <p class="control">
                      <input
                        id="search-value"
                        class="input"
                        type="text"
                        placeholder="Search"
                      />
                    </p>
                    <p class="control">
                      <a class="button is-warning"> Search </a>
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>

    </section>
    {{{body}}}
    <script src="/js/main.js"></script>
  </body>

</html>