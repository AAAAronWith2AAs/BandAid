<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BandAID</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <section class="hero">
      <div class="hero-body">
        <img src="/img/logo.png" alt="BandAID logo" />
      </div>

      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <a class="navbar-item" href="https://fierce-beach-33317.herokuapp.com/">
            <img
              src="/img/logo.png"
              {{!-- width="112"
              height="28" --}}
            />
          </a>

          <a
            role="button"
            class="navbar-burger"
            aria-label="menu"
            aria-expanded="false"
            data-target="navbarBasicExample"
          >
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>
        <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item" href="https://fierce-beach-33317.herokuapp.com/api/users">
        All Users
      </a>
      <a class="navbar-item" href="https://fierce-beach-33317.herokuapp.com/api/concerts/">
        All Shows
      </a>
      <a class="navbar-item" href="https://fierce-beach-33317.herokuapp.com/api/venues">
        All Venues
      </a>
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start">
              <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">
                Add New
              </a>
              <div class="navbar-dropdown">
                <a
                  class="navbar-item"
                  href="https://fierce-beach-33317.herokuapp.com/newband"
                >Bands</a>
                <a
                  class="navbar-item"
                  href="https://fierce-beach-33317.herokuapp.com/newconcert/"
                >Shows</a>
                <a
                  class="navbar-item"
                  href="https://fierce-beach-33317.herokuapp.com/newvenue"
                >Venues</a>
              </div>
            </div>
          </div>
        </div>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>

          <div class="navbar-end">
            <div class="navbar-item">
                <form id="nav-search">
                  <div class="field is-grouped">
                    <div class="field has-addons has-addons-right">
                    <p class="control navbar-end">
                      <input
                        id="search-value"
                        class="input"
                        type="text"
                        placeholder="Search"
                      />
                    </p>
                    <p class="control">
                      <span class="select">
                        <select id="nav-select">
                          <option>Concert by Band</option>
                          <option>Venue by Name</option>
                          <option>Band by Name</option>
                        </select>
                      </span>
                    </p>
                    <p class="control">
                      <a class="button is-dark"> Search </a>
                    </p>
                </div>
              </div>
              </form>
            </div>
          </div>
        </div>
      </nav>

    </section>
    {{{body}}}
    <script src="/js/main.js"></script>
  </body>

</html>